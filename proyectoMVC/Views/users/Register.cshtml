@model proyectoMVC.Mapper.DTO.UserRegisterDTO;

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">
    <title>Register</title>
</head>

<main class="container-fluid">
    <div class="row formulario d-flex flex-column-reverse flex-lg-row">
        <div class="col-11 col-sm-9 col-md-7 col-lg-7 col-xl-6 col-xxl-6 mx-auto d-none d-sm-block">
            <img src="~/media/imgs/cat-114782.jpg" alt="" class="h-img shadow">
        </div>
        <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-3 col-xxl-3 mx-auto my-auto">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 
                <h1 class="text-center title mb-5 f-cursive">Registrar</h1>
@{
                        if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-danger">@ViewBag.Message</div>
                        }
                    }
                <input type="text" asp-for="name"  class="d-block mx-auto p-1 my-3 rounded inputs ps-2 f-cursive" placeholder="Nombre" required>
                <span asp-validation-for="name" class="text-danger"></span>

                <input type="text"  asp-for="lastName"  class="d-block mx-auto p-1 my-3 rounded inputs ps-2 f-cursive" placeholder="Apellido" required>
                <span asp-validation-for="lastName" class="text-danger"></span>


                <input type="email" asp-for="email" class="d-block mx-auto p-1 my-3 rounded inputs ps-2 f-cursive" placeholder="Correo" required>
                <span asp-validation-for="email" class="text-danger"></span>

                <input type="password"  asp-for="password"  class="d-block mx-auto my-3 p-1 rounded inputs ps-2 f-cursive" placeholder="Contraseña" required>
                <span asp-validation-for="password" class="text-danger"></span>

                <input type="submit" value="Registrar" class="mx-auto d-block btns mb-2">

            </form>
            <div class="col-12">
                <span class="d-flex justify-content-center flex-wrap f-cursive">¿Ya tienes cuenta?<a asp-action="Login" class="d-block text-center mb-5 text-decoration-none ms-2">Ingresar a mi cuenta</a></span>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
