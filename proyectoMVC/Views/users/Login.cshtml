@model proyectoMVC.Mapper.DTO.UserLoginDTO;

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">
    <title>Login</title>
</head>
<body>

   
    <main class="container-fluid">
        <div class="row formulario d-flex flex-column-reverse flex-lg-row">
            <div class="col-11 col-sm-9 col-md-7 col-lg-7 col-xl-6 col-xxl-6 mx-auto  d-none d-sm-block">
                <img src="~/media/imgs/cat-114782.jpg" alt="" class="h-img shadow">
            </div>
            <div class="col-12 col-sm-9 col-md-7 col-lg-5 col-xl-3 col-xxl-3 mx-auto my-auto">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 
                    <h1 class="text-center title mb-3 mb-lg-0 mt-lg-0 mt-5 pt-5 pt-md-0 f-cursive">Login</h1>
                       @{
                        if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-danger">@ViewBag.Message</div>
                        }
                    }
                    <div class="email d-flex justify-content-center mx-auto">
                            <label asp-for="email"><img src="~/media/icons/icons8-login-67.png" alt="" class="h-icons"></label>
                            <input type="email" asp-for="email"  class="d-block ms-1 p-1 my-3 rounded inputs ps-2 f-cursive" placeholder="Correo" required>
                      
                        
                        </div>
              
                  
<div class="contra d-flex justify-content-center mx-auto">
                            <label asp-for="password"><img src="~/media/icons/icons8-escudo-de-seguridad-verde-50.png" alt="" class="h-icons me-1"></label>
                            <input type="password" asp-for="password" class="d-block my-3 p-1 rounded inputs ps-2 f-cursive" placeholder="Contraseña" required>
                        </div>
                    <input type="submit" value="Ingresar" class="mx-auto d-block btns mb-2">

                </form>
                <div class="col-12">
                    <span class="d-flex justify-content-center flex-wrap f-cursive">¿Todavia no tiene cuenta?<a asp-action="Register" class="d-block text-center mb-5 text-decoration-none ms-2">Registrate gratis</a></span>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
