@using System.Security.Claims
<!DOCTYPE html>
<html lang="es-ES">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mascotas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
    <link rel="shortcut icon" href="~/media/icons/logo.png">
</head>
<body class="d-flex flex-column justify-content-between">
    <header class="container-fluid contacto" hidden>
        <div class="row mx-auto py-3 d-flex justify-content-center">
            <div class="col-8 contactos d-flex flex-wrap my-auto">


                <div class="col-4 redes d-flex justify-content-end">
                    <div class="facebook mx-2">
                        <a href="." class="text-white text-decoration-none">
                            <i class="fa fa-facebook fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="twitter mx-2">
                        <a href="." class="text-white text-decoration-none">
                            <i class="fa fa-twitter fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="youtube mx-2">
                        <a href="." class="text-white text-decoration-none">
                            <i class="fa fa-youtube-play fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="instagram mx-2">
                        <a href="." class="text-white text-decoration-none">
                            <i class="fa fa-instagram fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <nav id="menu" class="container-fluid d-flex justify-content-between align-items-center menuGrande">


        <a asp-action="Home" asp-controller="Home"><img src="~/media/logo/LogoPets-white.png" alt="" class="logo"></a>




        <div class="users d-flex">
            @{
                var userRole = (User.Identity as ClaimsIdentity).Claims.Where(c => c.Type == ClaimTypes.Role).FirstOrDefault();
                if (userRole != null)
                {


                    if (userRole.Value == "admin")
                    {
                                <div class="adoptador me-3">
                                    <a asp-action="Get" asp-controller="Dador" class="text-white text-decoration-none d-flex">
                                        <p class="text-white my-auto pe-2 fs-6">Revisar Dadores</p>




                                        <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                    </a>
                                </div>
                    }else{
                            <div class="adoptador me-3">
                                <a asp-action="Donar" asp-controller="Donar" class="text-white text-decoration-none d-flex">
                                    <p class="text-white my-auto pe-2 fs-6">Donar</p>




                                    <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                </a>
                            </div>

                            <div class="adoptador me-3">
                                <a asp-action="Get" asp-controller="Mascotas" class="text-white text-decoration-none d-flex">
                                    <p class="text-white my-auto pe-2 fs-6">Adoptar</p>
                                    <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                </a>
                            </div>

                    }
                }
            }
            @{if(userRole==null){
                <div class="adoptador me-3">
                    <a asp-action="Donar" asp-controller="Donar" class="text-white text-decoration-none d-flex">
                        <p class="text-white my-auto pe-2 fs-6">Donar</p>




                        <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                    </a>
                </div>

                <div class="adoptador me-3">
                    <a asp-action="Get" asp-controller="Mascotas" class="text-white text-decoration-none d-flex">
                        <p class="text-white my-auto pe-2 fs-6">Adoptar</p>
                        <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                    </a>
                </div>

            }}

         
            

            @{

                if (userRole != null)
                {
                    if (userRole.Value == "dador")
                    {
                                <div class="me-3">
                                    <a asp-action="Post" asp-controller="Mascotas" class="text-white text-decoration-none d-flex">
                                        <p class="text-white my-auto pe-2 fs-6">Dar en Adopción</p>
                                        <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                    </a>
                                </div>
                                <div class="me-3">
                                    <a asp-action="GetMisAnimalitos" asp-controller="Mascotas" class="text-white text-decoration-none d-flex">
                                        <p class="text-white my-auto pe-2 fs-6">Ver mis Animalitos</p>
                                        <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                    </a>
                                </div>

                    }
                    else
                    {
                        if (userRole.Value != "admin")
                        {
                                    <div class="me-3">
                                        <a asp-action="Post" asp-controller="Dador" class="text-white text-decoration-none d-flex">
                                            <p class="text-white my-auto pe-2 fs-6">Dar en Adopción</p>
                                            <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                        </a>
                                    </div>
                        }
                    }


                }
                else
                {
                            <div class="me-3">
                                <a asp-action="Post" asp-controller="Dador" class="text-white text-decoration-none d-flex">
                                    <p class="text-white my-auto pe-2 fs-6">Dar en Adopción</p>
                                    <i class="fa fa-paw fa-2x" aria-hidden="true"></i>
                                </a>
                            </div>
                }

            }




            <div class="user me-2">
                <a href="#" class="text-white text-decoration-none">
                    <i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>
                </a>
                @{
                    var userRole1 = (User.Identity as ClaimsIdentity).Claims.Where(c => c.Type == ClaimTypes.Role).FirstOrDefault();

                    if (userRole1 != null)
                    {
                                <div class="me-5">
                                    <div class="hover-contenedor-users"></div>
                                    <div class="contenedor-usuarios">

                                      

                                   
                                        <hr>

                                        <div class="cuenta">
                                            <a asp-action="Logout" asp-controller="Users" class="d-flex hover-underline">
                                                <p class="text-white text-center ps-3 fs-6 fw-bold">Cerrar sesión</p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                    }
                    else
                    {
                                <div class="me-5">
                                    <div class="hover-contenedor-users"></div>
                                    <div class="contenedor-usuarios">

                                        <div class="cuenta mt-2">
                                            <a asp-action="Login" asp-controller="Users" class="d-flex hover-underline">
                                                <span class="material-symbols-outlined fs-icon">person</span>
                                                <p class="text-white ms-3 pt-1 fs-6 fw-bold">Iniciar Sesión</p>
                                            </a>
                                        </div>

                                        <div class="cuenta mt-2">
                                            <a asp-action="Register" asp-controller="Users" class="d-flex hover-underline">
                                                <span class="material-symbols-outlined fs-icon">person</span>
                                                <p class="text-white ms-3 pt-1 fs-6 fw-bold">Registrarse</p>
                                            </a>
                                        </div>

                                        <hr>


                                    </div>
                                </div>
                    }

                }

            </div>
        </div>
    </nav>
    <nav role="navigation" class="menuChico position-fixed top-0">
        <div id="menuToggle">
            <!--
            A fake / hidden checkbox is used as click reciever,
            so you can use the :checked selector on it.
            -->
            <input type="checkbox" />

            <!--
            Some spans to act as a hamburger.

            They are acting like a real hamburger,
            not that McDonalds stuff.
            -->
            <span class="bg-dark"></span>
            <span class="bg-dark"></span>
            <span class="bg-dark"></span>

            <!--
            Too bad the menu has to be inside of the button
            but hey, it's pure CSS magic.
            -->
            <ul id="menu1">

                <a asp-action="Home" asp-controller="Home"><img src="~/media/logo/LogoPets.png" alt="" class="logo">


                <li></li></a>

             
                @{

                    if (userRole != null)
                    {
                        if (userRole.Value == "admin")
                        {

                                    <a asp-action="Get" asp-controller="Dador" class="text-white text-decoration-none d-flex">
                                    <li>Revisar Dadores</li>




                                    </a>

                        }else{
                            <a asp-action="Donar" asp-controller="Donar" class=" text-decoration-none d-flex">


                            <li>Donar</li></a>
                            <a asp-action="Get" asp-controller="Mascotas" class=" text-decoration-none d-flex">
                            <li>
                                Adoptar
                            </li>
                            </a>
                        }
                        if (userRole.Value == "dador")
                        {
                           
                                    <a asp-action="Post" asp-controller="Mascotas" class=" text-decoration-none d-flex">
                                    <li>Dar en Adopción</li>
                                    </a>
                                    <a asp-action="GetMisAnimalitos" asp-controller="Mascotas" class=" text-decoration-none d-flex">
                                    <li> Ver mis Animalitos </li>   </a>
                        }
                        else
                        {
                            if (userRole.Value != "admin")
                            {
                              
                                        <a asp-action="Post" asp-controller="Dador" class=" text-decoration-none d-flex">
                                        <li>
                                            Dar en Adopción
                                        </li>
                                        </a>

                            
                            }

                        }


                    }
                    else
                    {

                        <a asp-action="Donar" asp-controller="Donar" class=" text-decoration-none d-flex">


                        <li>Donar</li></a>
                        <a asp-action="Get" asp-controller="Mascotas" class=" text-decoration-none d-flex">
                        <li>
                            Adoptar
                        </li>
                        </a>
                                <a asp-action="Post" asp-controller="Dador" class=" text-decoration-none d-flex">
                                <li>
                                    Dar en Adopción
                                </li></a>

                    }

                } @{

                    if (userRole1 != null)
                    {
                              



                                <a asp-action="Logout" asp-controller="Users" class="text-decoration-none d-flex">
                                <li>
                                    Cerrar sesión
                                </li>
                                </a>

                    }
                    else
                    {


                                <a asp-action="Login" asp-controller="Users" class="text-decoration-none d-flex">
                                <li>
                                    Iniciar Sesión
                                </li>
                                </a>


                                <a asp-action="Register" asp-controller="Users" class="text-decoration-none d-flex">
                                <li>Registrarse</li>
                                </a>



                    }

                }

                <li class="d-flex justify-content-start mx-auto">
                    <div class="facebook mx-2">
                        <a href="." class=" text-decoration-none">
                            <i class="fa fa-facebook fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="twitter mx-2">
                        <a href="." class=" text-decoration-none">
                            <i class="fa fa-twitter fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="youtube mx-2">
                        <a href="." class="text-decoration-none">
                            <i class="fa fa-youtube-play fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="instagram mx-2">
                        <a href="." class=" text-decoration-none">
                            <i class="fa fa-instagram fa-lg" aria-hidden="true"></i>
                        </a>
                    </div>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="mt-5 mt-lg-4">
            @RenderBody()
        </main>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
