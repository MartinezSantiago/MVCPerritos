@model proyectoMVC.Mapper.DTO.MascotaDetailsDTO

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Layout.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">
    <title>Donador</title>
</head>
<body class="detalles-bg">
    <main class="container mt-5 mb-5 bg-white-detatalles">
        <div class="row">
         
            <div class="col-12">
                <br />
                <h1 class="fs-1 fw-bold text-center mb-4 mt-3">Hola, soy @Model.Name @Model.LastName</h1>
            </div>
        </div>
        
        <div class="row p-lg-5 my-auto">
            
            <div class=" col-12 col-lg-6 mt-4 imagenDetails">
                <img src="~/images/@Model.Imagen" alt="" class="img-animal rounded" >
            </div>
            <div class="col-12 col-lg-5 mt-2">
   
                <div class="datos ">
                    <div class="dato my-lg-0 my-2">
                  
                     <div class="col-12">
                            <h2 class="text-center fw-bold">Mi Información</h2>
                        </div>

                    </div>
                    <div class="dato my-lg-0">

                        <div class="col-12 d-flex justify-content-start align-items-baseline gap-1">
                            <h3 class="pe-2">Edad:</h3>
                            <span class="fs-5">@Model.Edad</span> <span class="fs-5">Añitos</span>
                        </div>

                    </div>
                    <div class="dato my-lg-4">
                        <div class="col-12 d-flex justify-content-start align-items-baseline gap-1">
                            <h3 class="pe-2">Tamaño:</h3>
                            <span class="fs-5">@Model.Tamaño</span>
                        </div>
                    </div>
                    <div class="dato my-lg-4">

                        <div class="col-12 d-flex justify-content-start align-items-baseline gap-1">
                            <h3 class="pe-2">Peso:</h3>
                            <span class="fs-5">@Model.Peso</span> <span class="fs-5">KG</span>
                        </div>
                    </div>
    
                    <div class="dato my-lg-4">
                        <div class="col-12 d-flex justify-content-start align-items-baseline gap-1">
                            <h3 class="pe-2">Sexo:</h3>
                            <span class="fs-5">@Model.Sexo</span>
                        </div>
                    </div>
                    <div class="dato my-lg-4">
                        <div class="col-12 d-flex justify-content-start align-items-baseline gap-1">
                            <h3 class="pe-2">Raza:</h3>
                            <span class="fs-5">@Model.Raza</span>
                        </div>

                    </div>
                    <div class="dato my-lg-4">
                        <div class="col-12 d-flex justify-content-start align-items-baseline gap-1">


                            <h3 class="pe-2">Ubicación:</h3> @{
                                    switch (@Model.Provincia)
                                    {
                                        case "1":
                                                                <span class="fs-5">Buenos Aires</span>
                                            ; break;
                                        case "2":
                                                                <span class ="fs-5">Catamarca</span>
                                            ; break;
                                        case "5":
                                                                <span class="fs-5">Chaco</span>
                                            ; break;
                                        case "6":
                                                                <span class="fs-5">Chubut</span>
                                            ; break;
                                        case "50":
                                                                <span class="fs-5">CABA</span>
                                            ; break;
                                        case "3":
                                                                <span class="fs-5">Córdoba</span>
                                            ; break;
                                        case "4":
                                                                <span class="fs-5"> Corrientes</span>
                                            ; break;
                                        case "7":
                                                                <span class ="fs-5"> Entre Ríos</span>
                                            ; break;
                                        case "8":
                                                                <span class ="fs-5">Formosa</span>
                                            ; break;
                                        case "9":
                                                                <span class="fs-5">Jujuy</span>
                                            ; break;
                                        case "10":
                                                                <span class ="fs-5"> La Pampa</span>
                                            ; break;
                                        case "11":
                                                                <span class="fs-5">La Rioja</span>
                                            ; break;
                                        case "12":
                                                                <span class="fs-5">Mendoza</span>
                                            ; break;
                                        case "13":
                                                                <span class="fs-5">Misiones</span>
                                            ; break;
                                        case "14":
                                                                <span class="fs-5">Neuquen</span>
                                            ; break;
                                        case "15":
                                                                <span class="fs-5">Rio Negro</span>
                                            ; break;
                                        case "16":
                                                                <span class="fs-5">Salta</span>
                                            ; break;
                                        case "17":
                                                                <span class="fs-5">San Luis</span>
                                            ; break;
                                        case "19":
                                                                <span class="fs-5">Santa Cruz</span>
                                            ; break;
                                        case "20":
                                                                <span class="fs-5">Santa Fe</span>
                                            ; break;
                                        case "21":
                                                                <span class="fs-5">Santiago del Estero</span>
                                            ; break;
                                        case "22":
                                                                <span class="fs-5">Tierra del Fuego</span>
                                            ; break;

                                    }
                                }
                           

                        </div>

                    </div>
                </div>

            </div>
            <div class="col-12 descripcion">
                <hr />
                <h2>Descripción</h2>
                <p>@Model.Descripcion</p>

                <hr />
                <h2>Contacto</h2>
                <p>@Model.Contacto</p>
            </div>
        </div>
       
      
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
