@model proyectoMVC.Mapper.DTO.MascotaDetailsDTO

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Layout.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">
    <title>Donador</title>
</head>
<body>
    <main class="container mt-4 mb-5">
        <div class="row">
            <div class="col-12">
                <h1 class="fs-1 fw-bold text-center mb-4">Hola, soy @Model.Name @Model.LastName</h1>
            </div>
        </div>
        <div class="row p-5 ">
            <div class="col-6">
                <img src="~/images/@Model.Imagen" alt="" class="img-animal rounded">
            </div>
            <div class="col-5 mt-5 pt-5">
               
            
                <div class="datos ">
                    <div class="dato d-flex my-2">
                        <div class="col-6 d-flex align-items-baseline gap-4">
                            <h3>Edad:</h3>
                            <span class="fs-5">@Model.Edad</span>
                        </div>
                        <div class="col-6 d-flex align-items-baseline gap-4">
                            <h3>Tamaño:</h3>
                            <p class="fs-5">@Model.Tamaño</p>
                        </div>
                    </div>
    
                    <div class="dato d-flex my-2">
                       
                        <div class="col-6 d-flex align-items-baseline gap-4">
                            <h3>Peso:</h3>
                            <span class="fs-5">@Model.Peso KG</span>
                        </div>
                    </div>
    
                    <div class="dato my-4">
                        <div class="col-12 d-flex align-items-baseline gap-4">
                            <h3>Sexo:</h3>
                            <span class="fs-5">@Model.Sexo</span>
                        </div>
                    </div>
                        <div class="dato my-4">
                        <div class="col-12 d-flex align-items-baseline gap-4">
                            <h3>Raza:</h3>
                            <span class="fs-5">@Model.Raza</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
        <div class="row px-5">
            <div class="col-12">
                <h2>Mi información</h2>
            </div>

            <div class="col-5 d-flex justify-content-between">
                <div class="info">
                    <i class="fa fa-check"></i>
                    
                    <span>Ubicación: @{
                            switch(@Model.Provincia){
                             case "1": <span>Buenos Aires</span>;break;
case "2": <span>Catamarca</span>;break;
case "5": <span>Chaco</span>;break;
case "6": <span>Chubut</span>;break;
case "50": <span>CABA</span>;break;
case "3": <span>Córdoba</span>;break;
case "4": <span>Corrientes</span>;break;
case "7": <span>Entre Ríos</span>;break;
case "8": <span>Formosa</span>;break;
case "9": <span>Jujuy</span>;break;
case "10": <span>La Pampa</span>;break;
case "11": <span>La Rioja</span>;break;
case "12": <span>Mendoza</span>;break;
case "13": <span>Misiones</span>;break;
case "14": <span>Neuquen</span>;break;
case "15": <span>Rio Negro</span>;break;
case "16": <span>Salta</span>;break;
case "17": <span>San Luis</span>;break;
case "19": <span>Santa Cruz</span>;break;
case "20": <span>Santa Fe</span>;break;
case "21": <span>Santiago del Estero</span>;break;
case "22": <span>Tierra del Fuego</span>;break;

                            }
                        }</span>
                    
                </div>

               
            </div>
            <hr>
        </div>

        <div class="row px-5 " >
            <div class="col-12 ">
                <h2>Descripción</h2>
            </div>
            <div class="col-12 fs-5 ">
              @Model.Descripcion
            </div>
               <hr>
            <div class="col-12">
                <h2>Cómo contactarme</h2>
            </div>
               <div class="col-12 fs-5">
              @Model.Contacto
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
