@model proyectoMVC.Mapper.DTO.DadorPostDTO

@{
    ViewData["Title"] = "Registrarse como Dador";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Layout.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">
    <title>Dador</title>
</head>


<body>
   
    <main class="container-fluid mt-4">
        <div class="row formulario d-flex flex-column-reverse flex-lg-row">
                <form asp-action="Post"  enctype="multipart/form-data" class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4 col-xxl-3 mx-auto my-auto">
                        <h1 class="text-center display-1 mb-5 title title-test">Dador<span class="fs-5 fw-bold">Form</span></h1>
                        <input type="text" name="localidad" id="localidad" class="d-block mx-auto p-1 my-3 rounded inputs ps-2" asp-for="Localidad" placeholder="Localidad" required>
                        <input type="text" name="direccion" id="direccion" class="d-block mx-auto p-1 my-3 rounded inputs ps-2" asp-for="Direccion" placeholder="Direccion" required>

                        <div class="mx-auto inputYlabel">
                            <label for="frente">Frente DNI</label>
                            <input type="file" name="name" id="frente" class="d-block mx-auto p-1 my-3 rounded inputs ps-2 w-100" asp-for="FrenteDNI" required>
                        </div>
                        <div class="mx-auto inputYlabel">
                            <label for="dorso">Dorso DNI</label>
                            <input type="file" name="name" id="dorso" class="d-block mx-auto p-1 my-3 rounded inputs ps-2 w-100" asp-for="DorsoDNI" required>
                        </div>
                        
                        <div class="mx-auto inputYlabel">
                        <label for="Imagen">Imagen Persona</label>
                            <input type="file" name="name" id="Imagen" class="d-block mx-auto p-1 my-3 rounded inputs ps-2 w-100" asp-for="ImagenPersona" required>
                        </div>
                        <input type="submit" value="Registrarme como dador" class="mx-auto d-block btns mb-2 mt-2">
                        <div class="col-12">
                            <span class="d-flex justify-content-center flex-wrap f-cursive"><a  class="d-block text-center mb-5 text-decoration-none ms-2" asp-action="Home" asp-controller="Home">Volver al Home</a></span>
                        </div>
                </form>
        </div>
    </main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


</body>
