@model List<proyectoMVC.Mapper.DTO.DadorGetDTO>
@{
    ViewData["Title"] = "Revisar Dadores";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Layout.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">
    <title>Revisar Dadores</title>
</head>
<h1 class="mt-5 pt-5">Revisar Dadores</h1>
<style>
    tr td img {
        transition: .2s;
    }

        tr td img:hover {
            transform: scale(2);
            width:200px;
            height:120px;
        }

        tr td:nth-child(5) img:hover {
            transform: scale(1.5);
            width: 200px;
            height: 200px;
        }
</style>
<table class="table table-hover table-dark " id="table">
    <thead>
        <tr>
            <th>
                Localidad 
            </th>
            <th>
         Dirección
            </th>

            <th>
                Frente DNI
            </th>
            <th>
                Dorso DNI
            </th>
            <th>
              Imagen Persona
            </th>
               <th>
              
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    <img src="/images/@item.FrenteDNI" width="150" height="90">
                </td>
                <td>

                    <img src="/images/@item.DorsoDNI" width="150" height="90">
                </td>
                 <td>

                    <img src="/images/@item.ImagenPersona" width="100" height="100">
                </td>
                <td>
                     
                            <a asp-action="Autorizar" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Autorizar"><i class="fa fa-check"></i></a>
                           <a asp-action="Denegar" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Denegar"><i class="fa fa fa-times"></i></a>
        
                </td>
                <td>

                </td>
            </tr>
        }
    </tbody>
</table>

