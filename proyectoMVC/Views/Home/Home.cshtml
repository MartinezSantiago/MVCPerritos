@model  List<proyectoMVC.Mapper.DTO.MascotaViewDTO>;

@{
}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Layout.css">
    <link rel="icon" type="image/x-icon" href="~/media/icons/logo.png">

    <title>Home</title>
</head>
<body>

    <main class="container-fluid  mb-5 pt-5 pb-5">
        <h1 class="display-1 fw-bold text-center" data-aos-delay="500" data-aos="fade-right">Pe<span class="color-primario">ts</span></h1>

        <div class="row d-flex flex-column-reverse flex-lg-row justify-content-center">
            <div id="carouselExampleIndicators" class="carousel slide  col-md-8 col-lg-6 mx-auto mx-lg-0 pt-3" data-aos-delay="700" data-aos="fade-right" data-bs-ride="true">
                <div class="carousel-inner mt-5">
                    <div class="carousel-item active">
                        <img src="~/media/imgs/img-carrousel-1.jpg" alt="Foto de nuestro primer local de DP"
                             class="d-block img-carrousel">
                    </div>
                    <div class="carousel-item">
                        <img src="~/media/imgs/img-carrousel-2.jpg" alt="Foto de nuestro segundo local de DP"
                             class="d-block img-carrousel">
                    </div>
                    <div class="carousel-item">
                        <img src="~/media/imgs/img-carrousel-3.jpg" alt="Foto de nuestro tercer local de DP"
                             class="d-block img-carrousel">
                    </div>
                </div>
                <button class="carousel-control-prev mt-5" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon mt-5" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next mt-5" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon mt-5" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="col-md-7 col-lg-6 my-auto mx-auto mx-lg-0" data-aos-delay="700" data-aos="fade-left">
                <h2 class="display-5 fw-bold text-center mt-5 pt-5 mb-5"> <span class="color-primario">Adopte</span> no compre</h2>
                <p class="fs-5 text-center">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Commodi temporibus iusto quo cumque hic, a, eius nihil aut sapiente aperiam cum delectus obcaecati sed pariatur praesentium autem vitae iste quisquam reprehenderit incidunt? Repellendus eligendi dolorum tempore mollitia eius et, veritatis ea eaque maiores iure deserunt non omnis explicabo odio quae!</p>
            </div>
        </div>
    </main>

    <section class="container mb-5 pt-5 mx-auto">
        <div class="row mb-5 mx-auto">
            <div class="col-12 mx-auto">
                <h2 class="display-5 fw-bold text-center" data-aos-delay="300" data-aos="fade-left"><span class="color-primario">Animalitos</span> en adopción</h2>
            </div>
        </div>
        <div class="row d-flex flex-wrap animalitos">
            @{
                var contador = 0;
                @foreach (var animal in Model)
                {
                    if (contador == 6)
                    {
                        break;
                    }
                    <div class="col-10 col-md-5 col-lg-4 col-xl-4 col-xxl-4 mx-auto mb-5">
                        <img src="~/images/@animal.Imagen" alt="" class="img-circle d-block mx-auto" data-aos-delay="300" data-aos="fade-right">
                        <div class="fecha d-flex justify-content-center me-3 mt-3" data-aos-delay="400" data-aos="fade-right">
                            <i class="fa fa-calendar fa-lg me-2" aria-hidden="true" data-aos-delay="450" data-aos="fade-right"></i>
                            <p data-aos-delay="900" data-aos="fade-right"> @animal.Edad</p>
                        </div>
                        <h3 class="text-center fw-bold" data-aos-delay="400" data-aos="fade-right">@animal.Name</h3>
                        <p class="text-center w-75 mx-auto" data-aos-delay="400" data-aos="fade-right">@animal.Tamaño</p>
                        <a asp-action="Details" asp-controller="Mascotas" asp-route-id="@animal.Id" class="d-block text-center" data-aos-delay="400" data-aos="fade-right">Detalles</a>
                    </div>
                    contador++;
                }


            }
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
